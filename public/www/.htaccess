#--------------------------------------------------
# Répertoire : /
#--------------------------------------------------

# Le serveur doit suivre les liens symboliques :
Options +FollowSymlinks

# Activation du module de réécriture d'URL :
RewriteEngine on

#--------------------------------------------------
# Règles de réécriture d'URL :
#--------------------------------------------------

# Routes publiques --------------------------------

    # DETAIL D'UN POST:
        # PATTERN: posts/{id}/{slug}
        # URL: index.php?postID=x
        RewriteRule ^posts\/([1-9][0-9]*)\/([a-z0-9][a-z0-9\-]*)$ index.php?posts=show&id=$1 [L]



# --------------------------------------------------
# ROUTE DE LA NEWSLETTER
# --------------------------------------------------
        #  PATTERN: newsletter

RewriteRule ^newsletter$ index.php?subscribers=add [L]


# --------------------------------------------------
# ROUTE DE LA CONFIRMATION
# --------------------------------------------------
    #  PATTERN:confirmation

RewriteRule ^confirmation$ index.php?subscribers=confirm [L]




    # ROUTE PAR DEFAUT:
        # PATTERN: /
        # Liste des posts
        # RewriteRule ^(.*)$ index.php [L]

#--------------------------------------------------
RewriteCond %{REQUEST_URI} !\.(js|css|jpg|gif|zip|png|pdf)$ [NC]
RewriteRule ^(.*)$ index.php [L]
